#!/usr/bin/env bash
set -euo pipefail

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PID_FILE="$ROOT/logs/listener.pid"

if [[ ! -f "$PID_FILE" ]]; then
  echo "No PID file found. Listener may not be running."
  exit 0
fi

PID=$(cat "$PID_FILE")

if kill -0 "$PID" 2>/dev/null; then
  kill "$PID"
  rm -f "$PID_FILE"
  echo "Stopped listener (PID $PID)"
else
  rm -f "$PID_FILE"
  echo "Listener was not running (stale PID file removed)"
fi
